{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": "off",
    "no-plusplus": "off",
    "import/extensions": "off",
    "object-curly-newline": "off",
    "object-curly-spacing": "off",
    "linebreak-style": "off"
  },
  "ignorePatterns": ["source/public/ext-modules/**/*"]
}
